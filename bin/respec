#!/usr/bin/env ruby

require 'respec'

app = Respec::App.new(*ARGV)
if app.help_only?
  STDERR.puts app.help
else
  STDERR.puts "++ #{app.command.join(' ')}"
  system *app.command
  if app.rerun?
  	failure_path = ENV['RESPEC_FAILURES'] || File.expand_path(".respec_failures")
  	system ('if [[ -s ' + failure_path + ' ]]; then respec f; fi')
  end
end
